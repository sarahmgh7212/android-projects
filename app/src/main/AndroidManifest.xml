<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sarah.simplenotification">
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".simple_notification.NoActivity"></activity>
        <activity android:name=".simple_notification.YesActivity" />
        <activity android:name=".simple_notification.LandingActivity" />
        <activity android:name=".simple_notification.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sarah.simplenotification.reminding_notification.Notification2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sarah.simplenotification.reminding_notification.RepeatingActivity"/>
    <receiver android:name="com.sarah.simplenotification.reminding_notification.NotificationReceiver"/>
    </application>

</manifest>